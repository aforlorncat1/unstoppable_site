    <%= f.text_field :pricing, :value => number_to_currency(f.object.pricing) %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
   <div class="field">
    <%= f.label :schedule %><br>
    <%= f.text_field :schedule %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_field :start_time %>
  </div>
  <div class="field">
    <%= f.label :pax_slots %><br>
    <%= f.number_field :pax_slots %>
  </div>

  <div class="actions">
